{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search (Direct)",
    "version": "1.0.0",
    "description": "Search MindKits products by keyword. This tool allows Tawk to pass a search term and receive up to 10 matching products."
  },
  "servers": [
    {
      "url": "https://www.mindkits.co.nz/api/v1"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Search for products by keyword",
        "operationId": "getProducts",
        "parameters": [
          {
            "name": "$filter",
            "in": "query",
            "description": "Search filter using Cart.com filter syntax, e.g., `contains(item_name,'bambu')`",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Number of products to return",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of matching products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": {
                      "type": "integer"
                    },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "item_name": {
                            "type": "string"
                          },
                          "price": {
                            "type": "number"
                          },
                          "url_rewrite": {
                            "type": "string"
                          }
                        },
                        "required": ["item_name", "price", "url_rewrite"]
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid search query"
          },
          "401": {
            "description": "Unauthorized â€” missing or invalid API key"
          },
          "500": {
            "description": "Server error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-AC-Auth-Token"
      }
    }
  }
}
