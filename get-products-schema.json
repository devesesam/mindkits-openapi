{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search",
    "version": "1.3.0",
    "description": "Allows Tawk AI to search MindKits products by keyword using GET or POST."
  },
  "paths": {
    "/get-products": {
      "get": {
        "summary": "Find products by keyword (GET)",
        "operationId": "getProductsGet",
        "parameters": [
          {
            "in": "query",
            "name": "keywords",
            "schema": { "type": "string" },
            "required": true,
            "description": "What keyword should we search for?"
          }
        ],
        "x-tawk-parameters": [
          {
            "name": "keywords",
            "type": "text",
            "required": true,
            "description": "What kind of product is the customer looking for?"
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": { "type": "integer" },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer" },
                          "item_name": { "type": "string" },
                          "price": { "type": "number" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Find products by keyword (POST)",
        "operationId": "getProductsPost",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "search": {
                    "type": "string",
                    "description": "The keyword to search for."
                  }
                },
                "required": ["search"]
              }
            }
          }
        },
        "x-tawk-parameters": [
          {
            "name": "search",
            "type": "text",
            "required": true,
            "description": "What kind of product is the customer looking for?"
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": { "type": "integer" },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer" },
                          "item_name": { "type": "string" },
                          "price": { "type": "number" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://storied-mandazi-dfbdb4.netlify.app/.netlify/functions"
    }
  ]
}
