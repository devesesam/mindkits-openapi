{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search",
    "version": "1.3.1",
    "description": "Allows Tawk AI to search MindKits products by keyword using a POST request with a JSON body. The response is simplified for better understanding."
  },
  "servers": [
    {
      "url": "https://storied-mandazi-dfbdb4.netlify.app/.netlify/functions"
    }
  ],
  "paths": {
    "/get-products": {
      "post": {
        "summary": "Find products by keyword",
        "operationId": "getProducts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "search": {
                    "type": "string",
                    "description": "Keyword to search for in product name or description (e.g., 'adapter', 'Bambu')."
                  }
                },
                "required": ["search"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List of matching products (simplified format)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": {
                      "type": "integer"
                    },
                    "entries": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": { "type": "string" },
                          "price": { "type": "number" },
                          "url": { "type": "string", "format": "uri" },
                          "description": { "type": "string" }
                        },
                        "required": ["title", "price", "url"]
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid request body" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  }
}
