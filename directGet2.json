{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search (Direct)",
    "version": "1.1.3",
    "description": "Search MindKits products directly from Cart.com using a keyword (e.g. 'bambu') via query string. Supports filtering with 'like:' syntax."
  },
  "servers": [
    {
      "url": "https://www.mindkits.co.nz/api/v1"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Search products by keyword",
        "operationId": "getProducts",
        "parameters": [
          {
            "name": "item_name",
            "in": "query",
            "required": true,
            "description": "Keyword filter using 'like:' (e.g. like:bambu)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filtered list of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": { "type": "integer" },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "item_name": { "type": "string" },
                          "price": { "type": "number" },
                          "url_rewrite": { "type": "string" }
                        },
                        "required": ["item_name", "price", "url_rewrite"]
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - API key missing or incorrect"
          },
          "500": {
            "description": "Server error"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-AC-Auth-Token"
      }
    }
  }
}
