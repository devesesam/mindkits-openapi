{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search",
    "version": "1.0.0",
    "description": "API tool to search and retrieve product data from Cart.com via Netlify middleware."
  },
  "paths": {
    "/get-products": {
      "post": {
        "summary": "Search Products",
        "operationId": "getProducts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "search": {
                    "type": "string",
                    "description": "Keyword or phrase to search for in product names."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "item_name": {
                            "type": "string"
                          },
                          "price": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://storied-mandazi-dfbdb4.netlify.app/.netlify/functions"
    }
  ]
}