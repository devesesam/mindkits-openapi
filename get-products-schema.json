{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search",
    "version": "1.2.2",
    "description": "Allows Tawk AI to search MindKits products by keyword using a GET request."
  },
  "servers": [
    {
      "url": "https://storied-mandazi-dfbdb4.netlify.app/.netlify/functions"
    }
  ],
  "paths": {
    "/get-products": {
      "get": {
        "summary": "Find products by keyword",
        "operationId": "getProducts",
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Keyword to search product names (e.g., 'Bambu', 'adapter')."
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": {
                      "type": "integer"
                    },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "item_name": {
                            "type": "string"
                          },
                          "price": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
