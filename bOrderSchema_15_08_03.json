{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Order Lookup",
    "version": "1.0.2",
    "description": "Look up a specific order's status using the order number and customer email."
  },
  "servers": [
    { "url": "https://storied-mandazi-dfbdb4.netlify.app/.netlify/functions" }
  ],
  "paths": {
    "/get-order": {
      "post": {
        "summary": "Get a specific order’s status (POST body)",
        "operationId": "getOrderPost",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order_number": { "type": "string", "description": "The unique order number to look up" },
                  "email": { "type": "string", "format": "email", "description": "Customer email used on the order" }
                },
                "required": ["order_number", "email"],
                "additionalProperties": false
              },
              "examples": {
                "example": { "value": { "order_number": "100035", "email": "customer@example.com" } }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order status and related details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "order_number": { "type": "string" },
                    "status_name": { "type": "string" },
                    "is_shipped": { "type": "boolean" },
                    "is_cancelled": { "type": "boolean" },
                    "ordered_at": { "type": "string", "format": "date-time" },
                    "tracking_url": { "type": "string", "format": "uri" }
                  },
                  "required": ["order_number", "status_name"]
                }
              }
            }
          },
          "400": { "description": "Missing or invalid order number or email" },
          "404": { "description": "Order not found" },
          "500": { "description": "Internal server error" }
        }
      },
      "get": {
        "summary": "Get a specific order’s status (query parameters)",
        "operationId": "getOrderGet",
        "parameters": [
          {
            "name": "order_number",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "The unique order number to look up"
          },
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "format": "email" },
            "description": "Customer email used on the order"
          }
        ],
        "responses": {
          "200": {
            "description": "Order status and related details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "order_number": { "type": "string" },
                    "status_name": { "type": "string" },
                    "is_shipped": { "type": "boolean" },
                    "is_cancelled": { "type": "boolean" },
                    "ordered_at": { "type": "string", "format": "date-time" },
                    "tracking_url": { "type": "string", "format": "uri" }
                  },
                  "required": ["order_number", "status_name"]
                }
              }
            }
          },
          "400": { "description": "Missing or invalid order number or email" },
          "404": { "description": "Order not found" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  }
}
