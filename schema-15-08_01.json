{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search",
    "version": "1.3.3",
    "description": "Allows Tawk AI to search MindKits products by keyword using a POST request with a JSON body. The response includes title, price, URL, and a plain-text long_description_1."
  },
  "servers": [
    {
      "url": "https://storied-mandazi-dfbdb4.netlify.app/.netlify/functions"
    }
  ],
  "paths": {
    "/get-products": {
      "post": {
        "summary": "Find products by keyword",
        "operationId": "getProducts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "search": {
                    "type": "string",
                    "description": "Keyword to search for in product name or description (e.g., 'adapter', 'Bambu')."
                  }
                },
                "required": ["search"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List of matching products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": {
                      "type": "integer",
                      "description": "Total number of matching products"
                    },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "description": "Name of the product"
                          },
                          "price": {
                            "type": "number",
                            "description": "Price of the product"
                          },
                          "url": {
                            "type": "string",
                            "format": "uri",
                            "description": "URL to the product page"
                          },
                          "long_description_1": {
                            "type": "string",
                            "description": "Description of the product"
                          }
                        },
                        "required": ["title", "price", "url", "long_description_1"],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": ["total_count", "products"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
