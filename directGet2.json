{
  "openapi": "3.0.0",
  "info": {
    "title": "MindKits Product Search",
    "version": "1.0.3",
    "description": "Search products from the Cart.com API using the 'like:' syntax (e.g. like:bambu)."
  },
  "servers": [
    {
      "url": "https://www.mindkits.co.nz/api/v1"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Search for products by name",
        "operationId": "getProducts",
        "parameters": [
          {
            "name": "item_name",
            "in": "query",
            "required": true,
            "description": "Search keyword using 'like:' syntax (e.g. like:bambu)",
            "schema": {
              "type": "string",
              "example": "like:bambu"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful product match",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_count": {
                      "type": "integer"
                    },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "item_name": { "type": "string" },
                          "price": { "type": "number" },
                          "url_rewrite": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized â€“ Check your API key"
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-AC-Auth-Token"
      }
    }
  }
}
